---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeaderAstro from '../../components/HeaderAstro.astro';
import Footer from '../../components/Footer';
import { SEO } from 'astro-seo';

const title = "Blog - Weboldal Optimalizálás & Teljesítmény";
const description = "Technikai útmutatók és szakértői elemzések weboldal sebességről, WordPress optimalizálásról és teljesítmény javításról.";

const blogPosts = [
  {
    title: "Miért lassú a WordPress oldalam? 7 technikai ok, amit ellenőrizz",
    description: "WordPress oldalad lassú? Nézd meg a 7 leggyakoribb technikai okot, ami lelassítja a weboldalad, és tanuld meg, hogyan diagnosztizálhatod őket.",
    url: "/blog/miert-lassu-a-wordpress-oldalam",
    date: "2025. január 31.",
    readTime: "12 perc olvasás",
    tags: ["WordPress", "Sebesség", "Optimalizálás"]
  }
];
---

<BaseLayout
  title={title}
  description={description}
  canonical="/blog"
>
  <SEO
    slot="head"
    title={title}
    description={description}
    openGraph={{
      basic: {
        title: title,
        type: "website",
        image: "/og-image.jpg",
      }
    }}
    twitter={{
      card: "summary_large_image",
    }}
  />

  <div class="min-h-screen bg-white">
    <HeaderAstro />

    <main class="max-w-6xl mx-auto px-4 py-24 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-neutral-900 mb-4">
          Blog
        </h1>
        <p class="text-xl text-neutral-600 max-w-3xl">
          Technikai útmutatók és szakértői elemzések weboldal sebességről, optimalizálásról és teljesítmény javításról.
        </p>
      </div>

      <!-- Blog Posts Grid -->
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {blogPosts.map((post) => (
          <article class="bg-neutral-50 rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300">
            <a href={post.url} class="block p-6">
              <div class="mb-4">
                <div class="flex items-center gap-2 text-sm text-neutral-600 mb-3">
                  <time>{post.date}</time>
                  <span>·</span>
                  <span>{post.readTime}</span>
                </div>
                <h2 class="text-xl font-bold text-neutral-900 mb-3 leading-tight hover:text-blue-600 transition-colors">
                  {post.title}
                </h2>
                <p class="text-neutral-700 leading-relaxed mb-4">
                  {post.description}
                </p>
              </div>
              <div class="flex flex-wrap gap-2 mb-4">
                {post.tags.map((tag) => (
                  <span class="text-xs px-3 py-1 bg-neutral-200 text-neutral-700 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
              <span class="text-blue-600 font-semibold text-sm hover:underline">
                Olvass tovább →
              </span>
            </a>
          </article>
        ))}
      </div>

      <!-- Empty state message (if no posts in future) -->
      {blogPosts.length === 0 && (
        <div class="text-center py-16">
          <p class="text-neutral-600 text-lg">
            Hamarosan érkeznek a cikkek...
          </p>
        </div>
      )}
    </main>

    <Footer client:load />
  </div>
</BaseLayout>
