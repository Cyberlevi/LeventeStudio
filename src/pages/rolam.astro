---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderAstro from '../components/HeaderAstro.astro';
import About from './About';
import Footer from '../components/Footer';
import CookieBanner from '../components/CookieBanner';
import MobileStickyBar from '../components/MobileStickyBar';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  'name': 'Levente Csurka',
  'jobTitle': 'Weboldal Audit Szakértő',
  'telephone': '+36202826843',
  'email': 'hello@leventestudio.app',
  'url': 'https://leventestudio.app',
  'address': {
    '@type': 'PostalAddress',
    'addressCountry': 'HU'
  }
};
---

<BaseLayout
  title="Rólam – Levente Csurka, Weboldal Audit Szakértő | LeventeStudio"
  description="Mérnöki háttér, adat-alapú gondolkodás, 8+ év tapasztalat webes technológiákban. Ismerj meg jobban és tudj meg, hogyan segíthetek."
  canonical="/rolam/"
  structuredData={structuredData}
>
  <CookieBanner client:load />
  <MobileStickyBar client:load />

  <div class="min-h-screen bg-white">
    <HeaderAstro />
    <About client:load />
    <Footer client:load />
  </div>
</BaseLayout>
